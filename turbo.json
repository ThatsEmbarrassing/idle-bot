{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "start:dev": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "format": {},
        "lint": {
            "dependsOn": ["format"],
            "persistent": true
        },
        "test": {
            "dependsOn": ["^test"]
        }
    }
}
