generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SteamUser {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    userID String @unique

    User User?
}

model DiscordUser {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    userID String @unique

    User User?
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    steamUser SteamUser @relation(fields: [steamID], references: [id])
    steamID String @unique @db.ObjectId

    discordUser DiscordUser? @relation(fields: [discordID], references: [id])
    discordID String? @unique @db.ObjectId
}
