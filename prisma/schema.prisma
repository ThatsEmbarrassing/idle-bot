generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiscordUser {
    id Int @id @default(autoincrement())
    userID String @unique

    User User?
}

model User {
    id Int @id @default(autoincrement())
    steamID String @unique

    discordUser DiscordUser? @relation(fields: [discordSID], references: [id], onDelete: SetNull, onUpdate: Cascade)
    discordSID Int? @unique
}

model UserIdentifier {
    id String @id @default(uuid())

    provider UserProvider
    providerID String
    userProviderID String

    externalData Json?

    createdAt DateTime @default(now())
}

enum UserProvider {
    DISCORD
}
